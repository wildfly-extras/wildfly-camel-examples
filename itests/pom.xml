            <groupId>xalan</groupId>
            <artifactId>xalan</artifactId>
        </dependency>
        <dependency>
            <groupId>org.wildfly.camel</groupId>
            <artifactId>wildfly-camel-config</artifactId>
            <scope>test</scope>
            <version>${version.wildfly.camel}</version>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <includes>
                    <include>arquillian.xml</include>
                </includes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>false</filtering>
                <excludes>
                    <exclude>arquillian.xml</exclude>
                </excludes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-example-wars</id>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <phase>generate-resources</phase>
                        <configuration>
                            <includeGroupIds>org.apache.activemq,org.wildfly.camel,com.icegreen</includeGroupIds>
                            <includeTypes>rar,war</includeTypes>
                            <stripVersion>true</stripVersion>
                            <outputDirectory>${project.build.directory}/examples</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <environmentVariables>
                        <JBOSS_HOME>${jboss.home}</JBOSS_HOME>
                    </environmentVariables>
                    <systemPropertyVariables>
                        <jboss.home.dir>${jboss.home}</jboss.home.dir>
                    </systemPropertyVariables>
                    <testSourceDirectory>${basedir}/src/main/java/</testSourceDirectory>
                    <testClassesDirectory>${project.build.directory}/classes/</testClassesDirectory>
                    <redirectTestOutputToFile>false</redirectTestOutputToFile>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>

        <!--
            Provision EAP + Camel Subsystem
        -->
        <profile>
            <id>installServer</id>
            <activation>
                <property>
                    <name>!skipServerInstall</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.jboss.galleon</groupId>
                        <artifactId>galleon-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>Server.InstallServer</id>
                                <goals>
                                    <goal>provision</goal>
                                </goals>
                                <phase>generate-resources</phase>
                                <configuration>
                                    <install-dir>${jboss.home}</install-dir>
                                    <record-state>false</record-state>
                                    <log-time>true</log-time>
                                    <offline>false</offline>
                                    <feature-packs>
                                        <feature-pack>
                                            <groupId>org.wildfly.camel</groupId>
                                            <artifactId>wildfly-camel-galleon-pack</artifactId>
                                            <version>${version.wildfly.camel}</version>
                                            <inherit-configs>true</inherit-configs>
                                        </feature-pack>
                                    </feature-packs>
                                    <plugin-options>
                                        <jboss-fork-embedded>false</jboss-fork-embedded>
                                        <jboss-maven-dist/>
                                    </plugin-options>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>Server.FuseConfig</id>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <phase>generate-resources</phase>
                                <configuration>
                                    <executable>java</executable>
                                    <environmentVariables>
                                        <JBOSS_HOME>${jboss.home}</JBOSS_HOME>
                                    </environmentVariables>
                                    <commandlineArgs>-jar ${jboss.home}/jboss-modules.jar -mp ${jboss.home}/modules org.wildfly.extras.config --configs camel --enable</commandlineArgs>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>Server.InstallScripts</id>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <phase>generate-resources</phase>
                                <configuration>
                                    <target>
                                        <copy todir="${project.build.outputDirectory}">
                                            <fileset dir="${project.basedir}/../camel-cxf-jaxrs-secure">
                                                <include name="*.cli" />
                                            </fileset>
                                            <fileset dir="${project.basedir}/../camel-cxf-jaxws-cdi-secure">
                                                <include name="*.cli" />
                                            </fileset>
                                            <fileset dir="${project.basedir}/../camel-cxf-jaxws-cdi-secure/src/main/resources">
                                                <include name="cli/**"/>
                                                <include name="keys/**"/>
                                            </fileset>
                                            <fileset dir="${project.basedir}/../camel-cxf-jaxws-secure">
                                                <include name="*.cli" />
                                            </fileset>
                                        </copy>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

    </profiles>
</project>
