        </dependency>
        <dependency>
            <groupId>org.wildfly.camel.example</groupId>
            <artifactId>example-camel-cxf-jaxrs-secure</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>org.wildfly.camel.example</groupId>
            <artifactId>example-camel-cxf-jaxws</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>org.wildfly.camel.example</groupId>
            <artifactId>example-camel-cxf-jaxws-cdi-secure</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>org.wildfly.camel.example</groupId>
            <artifactId>example-camel-cxf-jaxws-cdi-xml</artifactId>
